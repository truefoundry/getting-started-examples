# TrueFoundry API Configuration
# Your TrueFoundry API key for authentication
TFY_API_KEY=your_tfy_api_key_here

# LLM Configuration  
# The LLM model to use (default: openai-main/gpt-4o-mini)
LLM_MODEL=openai-main/gpt-4o-mini

# LLM Gateway base URL - replace {CONTROL_PLANE_URL} with your actual control plane URL
LLM_GATEWAY_BASE_URL={CONTROL_PLANE_URL}/api/llm

# FastAPI Configuration
# Root path for the FastAPI service (optional)
TFY_SERVICE_ROOT_PATH=

# Tracing Configuration
# OpenTelemetry tracing endpoint - replace {CONTROL_PLANE_URL} with your actual control plane URL
TRACING_BASE_URL={CONTROL_PLANE_URL}/api/otel

# Your tracing project fully qualified name (Can be copied from TrueFoundry Dashboard)
TRACING_PROJECT_FQN=your_workspace:your_project

# Application name for tracing
TRACING_APPLICATION_NAME=banking-agent
